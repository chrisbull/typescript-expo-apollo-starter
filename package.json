{
  "name": "typescript-expo-apollo-starter",
  "main": "node_modules/expo/AppEntry.js",
  "version": "0.1.0",
  "author": "SiteAppy - Chris Bull",
  "license": "MIT",
  "private": true,
  "typings": "typings/index.d.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "tslint src/**/*.ts",
    "tsc": "tsc",
    "clean": "rimraf build",
    "build": "yarn run clean && yarn run tsc",
    "watch": "yarn run build -w",
    "watchAndRunAndroid": "concurrently \"yarn run watch\" \"yarn run android\"",
    "buildRunAndroid": "yarn run build && yarn run watchAndRunAndroid ",
    "watchAndRunIOS": "concurrently \"yarn run watch\" \"yarn run ios\"",
    "buildRunIOS": "yarn run build && yarn run watchAndRunIOS ",
    "watchAndStart": "concurrently \"yarn run watch\" \"yarn run start\"",
    "buildAndStart": "yarn run build && yarn run watchAndStart",
    "gen-app-config": "ts-node generate-app-config.ts"
  },
  "dependencies": {
    "@expo/samples": "2.1.1",
    "@expo/vector-icons": "8.0.0",
    "apollo-cache-inmemory": "1.3.11",
    "apollo-client": "2.4.7",
    "apollo-link-schema": "1.1.2",
    "expo": "^31.0.5",
    "firebase": "^5.5.9",
    "graphql": "14.0.2",
    "graphql-tag": "2.10.0",
    "graphql-tools": "4.0.3",
    "moment": "2.22.2",
    "react": "16.5.0",
    "react-apollo": "2.3.1",
    "react-dom": "^16.6.3",
    "react-native": "https://github.com/expo/react-native/archive/sdk-31.0.1.tar.gz",
    "react-native-elements": "^0.19.1",
    "react-native-firebase": "^5.1.1",
    "react-native-paper": "^2.2.8",
    "react-native-swiper": "^1.5.14",
    "react-navigation": "^3.0.1",
    "sentry-expo": "^1.10.0",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-typescript": "^7.1.0",
    "@divyenduz/ts-graphql-plugin": "0.1.0",
    "@types/expo": "31.0.0",
    "@types/expo__vector-icons": "6.2.3",
    "@types/fbemitter": "2.0.32",
    "@types/graphql": "14.0.3",
    "@types/jest": "23.3.9",
    "@types/moment": "2.13.0",
    "@types/react": "16.7.7",
    "@types/react-native": "0.57.14",
    "@types/react-navigation": "2.13.5",
    "@types/react-test-renderer": "^16.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-expo": "^5.0.0",
    "concurrently": "^4.0.1",
    "dotenv-cli": "^1.4.0",
    "jest": "23.6.0",
    "jest-expo": "^31.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.2",
    "prettier-tslint": "0.4.0",
    "ts-jest": "23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "tslint-config-standard": "8.0.1",
    "tslint-eslint-rules": "5.4.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "3.6.0",
    "typescript": "^3.1.6"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
